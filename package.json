{
  "name": "matter-for-vscode",
  "displayName": "MatTer for vscode",
  "description": "Matlab Terminal for vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],  
  "repository": {
    "type": "git",
    "url": "github:mauzigoe/matter-for-vscode"
  },
  "license" : "BSD-3-Clause",
  "activationEvents": [
    "onCommand:matter-for-vscode.spawnMatlabTerminal",
    "onCommand:matter-for-vscode.runMatlabFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "matter-for-vscode.runMatlabFile",
        "title": "Run Matlab File"
      },
      {
        "command": "matter-for-vscode.spawnMatlabTerminal",
        "title": "Spawn a Matlab Terminal"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish",
    "deploy-pre-release": "vsce publish --pre-release"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.57",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "vsce": "^2.11.0"
  }
}
